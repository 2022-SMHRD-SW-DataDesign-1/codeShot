<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.codeshot.mapper">
	<insert id="joinClient" parameterType="UserDTO">
		insert into user values(email=#{email},pw=#{pw},name=#{name},phone=#{phone},isExpert='N',career=null) 
	</insert>
	<insert id="joinExpert" parameterType="UserDTO">
		insert into user values(email=#{email},pw=#{pw},name=#{name},phone=#{phone},isExpert='Y',career=#{career})
	</insert>
	<select id="login" parameterType="UserDTO" resultType="UserDTO">
		select * from user where email=#{email} and pw=#{pw}
	</select>
</mapper>